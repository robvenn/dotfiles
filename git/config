[init]
    defaultBranch = main

[push]
    autoSetupRemote = true
    followTags = true

[fetch]
    prune = true
    pruneTags = true
    all = true
    parallel = 0

[column]
    ui = auto

[branch]
    sort = -committerdate

[tag]
    sort = version:refname

[diff]
    algorithm = histogram
    colorMoved = plain
    colorMovedWS = allow-indentation-change
    mnemonicPrefix = true
    renames = true

[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true

[rerere]
    enabled = true
    autoupdate = true

[commit]
    verbose = true

[help]
    autocorrect = prompt

[pull]
    rebase = true

[merge]
    conflictStyle = zdiff3
    renormalize = true

[core]
    autocrlf = false
    untrackedCache = true
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    line-numbers = true
    hyperlinks = true

[merge "mergiraf"]
    name = mergiraf
    driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P

[alias]
    amend = commit --amend --no-edit
    branches = branch --sort=-committerdate --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:green)%(committerdate:relative)%(color:reset)'
    dft = -c diff.external=difft diff
    dftlog = -c diff.external=difft log -p --ext-diff
    dftshow = -c diff.external=difft show --ext-diff
    fixup = commit --fixup
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    pushf = push --force-with-lease
    undo = reset --soft HEAD~1
    unstage = restore --staged
    wip = !git add -A && git commit -m "--wip--"

[pack]
    threads = 0
